<h2>Mountains</h2>

<a class="btn" href="/mountains/new">Add Mountain</a>

<div class="mountains">
  <% @mountains.each do |mountain| %>
  <div class="row">
    <img src="<%= mountain.photo_url %>" alt="<%= mountain.name %> photo">
    <ul>
      <li>
        <h2>
          <a href="/mountains/<%= mountain.id %>">
            <%= mountain.name %>
          </a>
        </h2>
      </li>
      <li>
        <a href="/mountains/<%= mountain.id %>/edit">
          Edit
        </a>
      </li>
      <li>
        <li>
          <form action="/mountains/<%= mountain.id %>/delete" method="post">
            <button>Delete</button>
          </form>
        </li>
      </li>
    </ul>
  </div>
  <% end %>
</div>
